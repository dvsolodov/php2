{% extends "layouts/main.twig" %}

{% block pageTitle %}Каталог{% endblock %}

{% block content %}

<h2>Каталог</h2>
{% if products != [] %}
    {% for product in products %}
    <section>
        <img src="/assets/images/products/small/{{ product.img }}">
        <h3><a href="/products/{{ product.id }}">{{ product.name }}</a></h3>
        <p>Цена: {{ product.price }}</p>
        <button data-id="{{ product.id }}" data-quant="1" data-price="{{ product.price }}">В корзину</button>
    </section>
    {% endfor %} 
    <button data-start="{{ startId }}">Еще</button>
{% else %}
<p>Каталог пуст.</p>
{% endif %}

<script src="/assets/scripts/addProductTo.js"></script>

{% endblock %}
